<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/c_FFB5C5" />
            <corners
                android:bottomLeftRadius="5dp"
                android:topLeftRadius="5dp"
                ></corners>
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:right="1dp"
        android:left="1dp"
        android:bottom="1dp"
        android:top="1dp">
        <!--边框里面背景颜色 白色-->
        <shape>
            <solid android:color="@color/white" />
            <corners
                android:bottomLeftRadius="5dp"
                android:topLeftRadius="5dp"
                ></corners>
        </shape>
    </item>
</layer-list>