<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.stx.xhb.xbanner.XBanner
                android:id="@+id/xBanner"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:pointNormal="@drawable/channel_tab_unselected"
                app:pointSelect="@drawable/channel_tab_selected"
                app:pageChangeDuration="800"
                >

            </com.stx.xhb.xbanner.XBanner>




            <com.stx.xhb.xbanner.XBanner
                android:id="@+id/xBanner1"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:isShowNumberIndicator="true"
                app:pageChangeDuration="800"
                android:layout_marginTop="20dp"
                app:pointsPosition="RIGHT"
                app:tipTextSize="14sp"
                app:tipTextColor="@color/white"
                app:pointsContainerBackground="@color/white_50"
                >

            </com.stx.xhb.xbanner.XBanner>

            <com.stx.xhb.xbanner.XBanner
                android:id="@+id/xBanner2"
                android:layout_width="match_parent"
                android:layout_height="160dp"

                app:pageChangeDuration="800"

                android:layout_marginTop="20dp"
                app:isClipChildrenMode="true"
                app:isHandLoop="true"
                app:pointNormal="@drawable/channel_tab_unselected"
                app:pointSelect="@drawable/channel_tab_selected"
                >

            </com.stx.xhb.xbanner.XBanner>

        </LinearLayout>
    </ScrollView>
</layout>
